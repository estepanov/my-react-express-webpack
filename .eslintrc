{
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },

  "plugins": ["standard", "react", "promise", "import", "node", "prettier"],

  "extends": ["standard", "standard-react", "prettier"],

  "rules": {
    "prettier/prettier": "error"
  }
}
